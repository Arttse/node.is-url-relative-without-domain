{
  "name": "is-url-relative-without-domain",
  "version": "1.1.0-dev",
  "description": "Check if URL is relative without domain",
  "main": "index.js",
  "scripts": {
    "test": "xo && ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arttse/node.is-url-relative-without-domain.git"
  },
  "keywords": [
    "is",
    "url",
    "uri",
    "relative",
    "without",
    "domain",
    "name",
    "check",
    "checks"
  ],
  "author": "Nikita «Arttse» Bystrov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Arttse/node.is-url-relative-without-domain/issues"
  },
  "homepage": "https://github.com/Arttse/node.is-url-relative-without-domain#readme",
  "devDependencies": {
    "ava": "*",
    "xo": "*"
  },
  "dependencies": {
    "domains": "1"
  },
  "xo": {
    "esnext": false,
    "rules": {
      "no-multi-spaces": [
        "error",
        {
          "exceptions": {
            "ImportDeclaration": true,
            "VariableDeclarator": true,
            "Property": true
          }
        }
      ],
      "no-spaced-func": 0,
      "space-in-parens": [
        "error",
        "always"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "padded-blocks": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "key-spacing": [
        "error",
        {
          "beforeColon": true,
          "afterColon": true,
          "align": "colon"
        }
      ]
    }
  }
}
